{% extends 'base.html.twig' %}

{% block body %}
    <h1>Member</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ member.name }}</td>
            </tr>

            <tr>
                <th>Pole</th>
                <td>{{ member.pole }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ member.statut }}</td>
            </tr>
            <tr>
                <th>Linklinkidin</th>
                <td>{{ member.linklinkidin }}</td>
            </tr>
            <tr>
                <th>image</th>
                <img style="height: 300px;width: 300px;" src="{{ asset('/uploads/images/members/') }}{{ member.image }} " alt="" >

            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('member_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('member_edit', { 'id': member.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
